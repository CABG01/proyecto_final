<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesarbarragan.petgram">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dog_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_dog_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActividadesPrincipales.AcercaDe"
            android:parentActivityName=".ActividadesPrincipales.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActividadesPrincipales.MainActivity" />
            </activity>
        <activity
            android:name=".ActividadesPrincipales.Contacto_Correo"
            android:parentActivityName=".ActividadesPrincipales.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActividadesPrincipales.MainActivity" />
        </activity>
        <activity
            android:name=".ActividadesPrincipales.Topperritos"
            android:parentActivityName=".ActividadesPrincipales.MainActivity">

            <!-- soporte para versiones 4 o inferiores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActividadesPrincipales.MainActivity" />
        </activity>
        <activity android:name=".ActividadesPrincipales.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>